# Dockerfile.rasa
FROM rasa/rasa:3.6.21-full

WORKDIR /app

# Copy core Rasa project files
COPY config.yml domain.yml credentials.yml endpoints.yml ./
COPY data ./data
COPY models ./models

# (Optional) train inside the image if you donâ€™t want to copy models
# RUN rasa train

EXPOSE 5005

# Start Rasa server with API enabled
CMD ["run", "--enable-api", "--cors", "*", "--port", "5005"]
