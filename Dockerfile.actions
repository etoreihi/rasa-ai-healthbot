# Dockerfile.actions
FROM rasa/rasa-sdk:3.6.2

WORKDIR /app

# Copy actions
COPY actions ./actions

# Install Python deps for actions (openai etc.)
RUN pip install --no-cache-dir -r actions/requirements.txt

EXPOSE 5055

# Start action server
CMD ["start", \
     "--actions", "actions.actions", \
     "--port", "5055", \
     "--cors", "*"]
